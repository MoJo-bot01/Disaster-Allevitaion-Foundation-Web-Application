@model WebDAFFinal.Models.good_donations

@{
    ViewData["Title"] = "Delete";
}

<button type="button" onclick="location.href='@Url.Action("Index")'" class="button_create_back">Back to List</button>

<h3>Are you sure you want to delete this good donated?</h3>
<div class="delete-div">
    <hr />
    <dl class="row">
        <dt class="col-sm-4 category-text">
            Donation Added By:
        </dt>
        <dd class="col-sm-5 category-text1">
            @Html.DisplayFor(model => model.username)
        </dd>
        <dt class="col-sm-4 category-text">
            Item Name:
        </dt>
        <dd class="col-sm-5 category-text1">
            @Html.DisplayFor(model => model.item_name)
        </dd>
        <dt class="col-sm-4 category-text">
            Good(s) Item Description:
        </dt>
        <dd class="col-sm-5 category-text1">
            @Html.DisplayFor(model => model.item_description)
        </dd>
        <dt class="col-sm-4 category-text">
            Item Category:
        </dt>
        <dd class="col-sm-5 category-text1">
            @{
                if (Model.item_category == WebDAFFinal.Models.good_donations.CategoryType.Custom)
                {
                    @Model.CustomCategoryName
                }
                else
                {
                    @Model.item_category.ToString()
                }
            }
        </dd>
        <dt class="col-sm-4 category-text">
            Number Of Items:
        </dt>
        <dd class="col-sm-5 category-text1">
            @Html.DisplayFor(model => model.number_of_items)
        </dd>
        <dt class="col-sm-4 category-text">
            Good Donation Date:
        </dt>
        <dd class="col-sm-5 category-text1">
            @Html.DisplayFor(model => model.donation_date)
        </dd>
        <dt class="col-sm-4 category-text">
            Donated By:
        </dt>
        <dd class="col-sm-5 category-text1">
            @{
                if (Model.is_anonymous == WebDAFFinal.Models.good_donations.AnonymousType.Yes)
                {
                    @Html.DisplayFor(model => model.donator)
                }
                else
                {
                    @Html.DisplayFor(model => model.donator)
                }
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="good_donations_id" />
        <input type="submit" value="Delete" class="btn btn-delete" />
    </form>
</div>
