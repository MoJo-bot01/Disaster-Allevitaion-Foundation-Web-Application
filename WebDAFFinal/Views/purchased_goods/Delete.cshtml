@model WebDAFFinal.Models.purchased_goods

@{
    ViewData["Title"] = "Delete";
}

<button type="button" onclick="location.href='@Url.Action("Index")'" class="button_create_back">Back to List</button>


<h3>Are you sure you want to delete this purchased good?</h3>
<div class="delete-div">
    <hr />
    <dl class="row">
        <dt class="col-sm-4 category-text">
            Item Name:
        </dt>
        <dd class="col-sm-5 category-text1">
            @Html.DisplayFor(model => model.item_name)
        </dd>
        <dt class="col-sm-4 category-text">
           Item Description
        </dt>
        <dd class="col-sm-5 category-text1">
            @Html.DisplayFor(model => model.item_description)
        </dd>
        <dt class="col-sm-4 category-text">
            Item Category:
        </dt>
        <dd class="col-sm-5 category-text1">
            @Html.DisplayFor(model => model.item_category)
        </dd>
        <dt class="col-sm-4 category-text">
            Number Of Items:
        </dt>
        <dd class="col-sm-5 category-text1">
            @Html.DisplayFor(model => model.number_of_items)
        </dd>
        <dt class="col-sm-4 category-text">
            Price:
        </dt>
        <dd class="col-sm-5 category-text1">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class="col-sm-4 category-text">
            Item Purchase Date:
        </dt>
        <dd class="col-sm-5 category-text1">
            @Html.DisplayFor(model => model.purchased_date)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="purchased_goods_id" />
        <input type="submit" value="Delete" class="btn btn-delete" />
    </form>
</div>
